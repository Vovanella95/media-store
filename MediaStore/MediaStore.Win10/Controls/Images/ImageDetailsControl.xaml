<Page x:Class="MediaStore.Win10.Controls.Images.ImageDetailsControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:MediaStore.Win10.Controls.Images"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Tapped="{x:Bind CloseImage, Mode=OneWay}"
      mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <AcrylicBrush TintColor="White"
                          TintOpacity="0.2"/>
        </Grid.Background>
        <Image Source="{x:Bind ViewModel.ImageUrl, Mode=OneWay}"
               Margin="40"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
    </Grid>
</Page>
