                            <Border x:Name="HoverBorder"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Width="136"
                                    Height="190"
                                    BorderBrush="#0084ff"
                                    Opacity="0"
                                    BorderThickness="2"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
